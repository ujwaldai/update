@model List<naya_project.Models.employee>
@{
    ViewBag.Title = "index";
    int sn = 0;
    <style>
        .table {
            background: rgb(2,0,36);
            background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(9,9,121,1) 20%, rgba(0,212,255,1) 100%);
        }
    </style>
}

<h2>Employee List</h2>
<table class="table" border="1"  style="background-color:aquamarine; color:brown; border-block-color:chocolate">
    <tr>
        <th>ID</th>
        <th>NAME</th>
        <th>ADDRESS</th>
    </tr>

    <h2>index</h2>
    @foreach (var data in Model)
        
    {
        <tr>
            <td>@(++sn)</td>
            <td>@(data.name)</td>
            <td>@(data.address)</td>
       </tr>
    }
    </table>
   
            

